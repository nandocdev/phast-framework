{
    "name": "nandocdev/phast",
    "type": "project",
    "require": {
        "vlucas/phpdotenv": "^5.6",
        "monolog/monolog": "^3.9",
        "phpmailer/phpmailer": "^6.10",
        "nesbot/carbon": "^3.10",
        "fpdf/fpdf": "^1.86",
        "php-di/php-di": "^7.0",
        "nikic/fast-route": "^1.3",
        "doctrine/orm": "^3.5",
        "aura/session": "^4.0",
        "jasongrimes/paginator": "^1.0",
        "robmorgan/phinx": "^0.16.9",
        "symfony/validator": "^7.3",
        "respect/validation": "^2.4",
        "league/plates": "^3.6",
        "symfony/console": "^7.3"
    },
    "require-dev": {
        "filp/whoops": "^2.18",
        "phpunit/phpunit": "^12.2",
        "kint-php/kint": "^6.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Phast\\App\\": "app/",
            "Phast\\Core\\": "core/"
        },
        "files": [
            "core/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Fernando Castillo",
            "email": "ferncastillov@outlook.com"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "serve": "php -S localhost:8000 -t public -a",
        "test": "phpunit --bootstrap core/bootstrap.php tests",
        "migrate": "phinx migrate -c config/phinx.php",
        "rollback": "phinx rollback -c config/phinx.php"
    }
}
